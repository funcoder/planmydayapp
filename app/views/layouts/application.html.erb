<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) ? page_title(content_for(:title)) : page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">

    <%# SEO Meta Tags %>
    <meta name="description" content="<%= content_for?(:meta_description) ? content_for(:meta_description) : meta_description %>">
    <link rel="canonical" href="<%= content_for?(:canonical_url) ? content_for(:canonical_url) : canonical_url %>">

    <%# Open Graph Tags %>
    <%= og_meta_tags(
      title: content_for?(:og_title) ? content_for(:og_title) : nil,
      description: content_for?(:og_description) ? content_for(:og_description) : nil,
      image: content_for?(:og_image) ? content_for(:og_image) : nil,
      url: content_for?(:og_url) ? content_for(:og_url) : nil
    ) %>

    <%# Twitter Card Tags %>
    <%= twitter_card_meta_tags(
      title: content_for?(:twitter_title) ? content_for(:twitter_title) : nil,
      description: content_for?(:twitter_description) ? content_for(:twitter_description) : nil,
      image: content_for?(:twitter_image) ? content_for(:twitter_image) : nil
    ) %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "sprites", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col">
    <!-- Notifications at the top -->
    <% if notice.present? %>
      <div class="bg-green-500 text-white px-4 py-3 text-center">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert.present? %>
      <div class="bg-red-500 text-white px-4 py-3 text-center">
        <%= alert %>
      </div>
    <% end %>
    
    <!-- Main content -->
    <div class="flex-grow pb-16">
      <%= yield %>
    </div>
    
    <!-- Beta badge at bottom -->
    <%= render "shared/beta_badge" %>
    
    <%= render "shared/cookie_consent" %>
  </body>
</html>
