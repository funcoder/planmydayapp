<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) ? page_title(content_for(:title)) : page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%# PWA Meta Tags %>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="PlanMyDay">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#14b8a6">

    <%# Hotwire Native: Show navigation bar %>
    <meta name="hotwire-native:navigation-bar" content="visible">

    <%# SEO Meta Tags %>
    <meta name="description" content="<%= content_for?(:meta_description) ? content_for(:meta_description) : meta_description %>">
    <link rel="canonical" href="<%= content_for?(:canonical_url) ? content_for(:canonical_url) : canonical_url %>">

    <%# Open Graph Tags %>
    <%= og_meta_tags(
      title: content_for?(:og_title) ? content_for(:og_title) : nil,
      description: content_for?(:og_description) ? content_for(:og_description) : nil,
      image: content_for?(:og_image) ? content_for(:og_image) : nil,
      url: content_for?(:og_url) ? content_for(:og_url) : nil
    ) %>

    <%# Twitter Card Tags %>
    <%= twitter_card_meta_tags(
      title: content_for?(:twitter_title) ? content_for(:twitter_title) : nil,
      description: content_for?(:twitter_description) ? content_for(:twitter_description) : nil,
      image: content_for?(:twitter_image) ? content_for(:twitter_image) : nil
    ) %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# PWA Manifest %>
    <link rel="manifest" href="/manifest.json">

    <%# Icons %>
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon-192.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "actiontext", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "sprites", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col" data-controller="service-worker">
    <!-- PWA Install Banner -->
    <%= render "shared/pwa_install_banner" %>

    <!-- Notifications at the top -->
    <% if notice.present? %>
      <div class="bg-green-500 text-white px-4 py-3 text-center">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert.present? %>
      <div class="bg-red-500 text-white px-4 py-3 text-center">
        <%= alert %>
      </div>
    <% end %>
    
    <!-- Main content -->
    <div class="flex-grow pb-16">
      <%= yield %>
    </div>
    
    <!-- Beta badge at bottom -->
    <% unless content_for?(:hide_beta_badge) %>
      <%= render "shared/beta_badge" %>
    <% end %>

    <!-- Cookie consent (hidden for native apps) -->
    <% unless native_app? %>
      <%= render "shared/cookie_consent" %>
    <% end %>

    <!-- Announcement modal for new features -->
    <% if authenticated? %>
      <%= render "announcements/modal" %>
    <% end %>
  </body>
</html>
