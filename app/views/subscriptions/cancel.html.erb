<div class="min-h-screen bg-gradient-to-br from-primary-50 to-secondary-50 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="text-6xl mb-4">ðŸ˜¢</div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">We're Sorry to See You Go</h1>
        <p class="text-gray-600">Before you cancel, let us know what we could improve</p>
      </div>

      <!-- What You'll Lose -->
      <div class="bg-red-50 border-2 border-red-200 rounded-xl p-6 mb-8">
        <h2 class="text-xl font-bold text-red-900 mb-4 flex items-center gap-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          Switching to Free Plan Means:
        </h2>
        <div class="space-y-3">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            <div>
              <p class="font-semibold text-red-900">Limited to 5 backlog tasks</p>
              <p class="text-sm text-red-700">You'll need to delete tasks if you exceed this limit</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            <div>
              <p class="font-semibold text-red-900">No Calendar View</p>
              <p class="text-sm text-red-700">You'll lose the ability to see your tasks in calendar format</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            <div>
              <p class="font-semibold text-red-900">No Sprite Rewards</p>
              <p class="text-sm text-red-700">Your gamification and motivation features will be disabled</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Feedback Form -->
      <%= form_with url: process_cancellation_subscriptions_path, method: :post, class: "space-y-6" do |form| %>
        <div>
          <label class="block text-sm font-semibold text-gray-900 mb-3">
            What's the main reason for cancelling? <span class="text-red-500">*</span>
          </label>
          <div class="space-y-2">
            <% CancellationFeedback::REASONS.each do |reason| %>
              <label class="flex items-center p-3 border-2 border-gray-200 rounded-lg hover:border-primary-300 cursor-pointer transition-colors">
                <%= form.radio_button :reason, reason, class: "text-primary-600 focus:ring-primary-500", required: true %>
                <span class="ml-3 text-gray-700"><%= reason %></span>
              </label>
            <% end %>
          </div>
        </div>

        <div>
          <label for="details" class="block text-sm font-semibold text-gray-900 mb-2">
            Tell us more (optional)
          </label>
          <p class="text-sm text-gray-600 mb-2">Your feedback helps us improve PlanMyDay for everyone</p>
          <%= form.text_area :details,
              rows: 4,
              placeholder: "What could we have done better? What features would you like to see?",
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:ring-0 transition-colors" %>
        </div>

        <!-- Grace Period Info -->
        <div class="bg-blue-50 border-2 border-blue-200 rounded-xl p-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="text-sm">
              <p class="font-semibold text-blue-900 mb-1">Good news!</p>
              <p class="text-blue-800">
                You'll keep your Pro access until the end of your current billing period.
                You can reactivate anytime before then if you change your mind.
              </p>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-3 pt-4">
          <%= form.submit "Confirm Cancellation",
              data: { turbo_confirm: "Are you absolutely sure? You can reactivate before your billing period ends." },
              class: "w-full py-4 px-6 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-semibold text-center" %>

          <%= link_to "Keep My Pro Subscription",
              manage_subscriptions_path,
              class: "block w-full py-4 px-6 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-semibold text-center" %>

          <%= link_to "Back to Dashboard",
              dashboard_path,
              class: "block text-center py-3 text-gray-600 hover:text-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
