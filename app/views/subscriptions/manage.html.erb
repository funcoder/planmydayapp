<div class="min-h-screen bg-gradient-to-br from-primary-50 to-secondary-50 py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Manage Your Subscription</h1>

      <% if current_user.pro? %>
        <!-- Pro Subscription Active -->
        <div class="bg-gradient-to-r from-primary-50 to-secondary-50 rounded-xl p-6 mb-6">
          <div class="flex items-center justify-between mb-4">
            <div>
              <div class="flex items-center gap-3 mb-2">
                <h2 class="text-2xl font-bold text-gray-900">Pro Plan</h2>
                <% if current_user.subscription_grace_period? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-yellow-100 text-yellow-800">
                    CANCELLING
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-green-100 text-green-800">
                    ACTIVE
                  </span>
                <% end %>
              </div>
              <p class="text-gray-600">$5.00 / month</p>
              <% if current_user.subscription_grace_period? %>
                <p class="text-sm text-yellow-700 mt-2">
                  Pro access until <%= current_user.subscription_period_end.strftime('%B %d, %Y') %>
                </p>
              <% end %>
            </div>
            <div class="text-4xl">‚≠ê</div>
          </div>

          <div class="space-y-2 text-sm text-gray-700">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Unlimited daily tasks & backlog</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Calendar view access</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Sprite rewards & gamification</span>
            </div>
          </div>
        </div>

        <!-- Manage Options -->
        <div class="space-y-4">
          <% if current_user.subscription_grace_period? %>
            <!-- Reactivation Option -->
            <div class="bg-yellow-50 border-2 border-yellow-200 rounded-xl p-4 mb-4">
              <p class="text-sm text-yellow-800 mb-3">
                Your subscription is scheduled to cancel on <%= current_user.subscription_period_end.strftime('%B %d, %Y') %>.
                You can reactivate it at any time before then to continue your Pro access.
              </p>
              <%= button_to "Reactivate Subscription", reactivate_subscriptions_path,
                  method: :post,
                  class: "block w-full py-3 px-6 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-semibold text-center" %>
            </div>
          <% end %>

          <% if current_user.stripe_customer_id.present? %>
            <%= link_to portal_subscriptions_path,
                class: "block w-full py-3 px-6 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-semibold text-center" do %>
              <span>Manage Billing in Stripe Portal</span>
            <% end %>
            <p class="text-xs text-center text-gray-500">Update payment method, view invoices, or cancel subscription</p>
          <% end %>

          <% unless current_user.subscription_grace_period? %>
            <%= link_to "Cancel Subscription", cancel_subscriptions_path,
                class: "block w-full py-3 px-6 border-2 border-red-500 text-red-600 rounded-lg hover:bg-red-50 transition-colors font-semibold text-center" %>
          <% end %>
        </div>

      <% else %>
        <!-- Free Plan -->
        <div class="bg-gray-50 rounded-xl p-6 mb-6">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-2">Free Plan</h2>
              <p class="text-gray-600">$0.00 / month</p>
            </div>
          </div>

          <div class="space-y-2 text-sm text-gray-700 mb-6">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Up to 5 daily tasks</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Up to 5 backlog tasks</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <span class="text-gray-400">Calendar view (Pro only)</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <span class="text-gray-400">Sprite rewards (Pro only)</span>
            </div>
          </div>

          <%= link_to "Upgrade to Pro", pricing_path,
              class: "block w-full py-3 px-6 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-semibold text-center" %>
        </div>
      <% end %>

      <%= link_to "Back to Dashboard", dashboard_path,
          class: "block text-center py-3 text-gray-600 hover:text-gray-800 mt-6" %>
    </div>
  </div>
</div>
