<div class="min-h-screen bg-gradient-to-br from-primary-50 to-secondary-50 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">
        <% if @user %>
          Upgrade to Pro
        <% else %>
          Get PlanMyDay Pro
        <% end %>
      </h1>

      <% unless @user %>
        <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-blue-700">
                <strong>New user?</strong> You'll enter your email during checkout and can create your account after payment.
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-gradient-to-br from-primary-600 to-secondary-700 rounded-xl p-6 mb-8">
        <div class="text-center mb-4">
          <div class="text-4xl font-bold text-white mb-2">$5<span class="text-lg text-primary-100 font-normal">/month</span></div>
          <p class="text-primary-100">Billed monthly â€¢ Cancel anytime</p>
        </div>

        <div class="space-y-3">
          <div class="flex items-center gap-3 text-white">
            <svg class="w-5 h-5 text-green-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Unlimited daily tasks & backlog</span>
          </div>
          <div class="flex items-center gap-3 text-white">
            <svg class="w-5 h-5 text-green-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Calendar view for planning ahead</span>
          </div>
          <div class="flex items-center gap-3 text-white">
            <svg class="w-5 h-5 text-green-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Sprite rewards & gamification</span>
          </div>
          <div class="flex items-center gap-3 text-white">
            <svg class="w-5 h-5 text-green-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Priority support</span>
          </div>
        </div>
      </div>

      <% if @user %>
        <!-- Logged in user: Direct checkout -->
        <%= form_with url: subscriptions_path, method: :post do %>
          <div class="space-y-4">
            <%= button_tag type: "submit",
                class: "w-full py-4 px-6 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-bold text-lg",
                data: { disable_with: "Processing..." } do %>
              <span>Continue to Checkout</span>
            <% end %>

            <%= link_to "Back to Pricing", pricing_path,
                class: "block text-center py-3 text-gray-600 hover:text-gray-800" %>
          </div>
        <% end %>

        <p class="text-sm text-gray-500 text-center mt-6">
          Secure payment processed by Stripe. Cancel anytime from your account settings.
        </p>
      <% else %>
        <!-- Not logged in: Offer both options -->
        <div class="space-y-6">
          <!-- Option 1: Checkout directly -->
          <%= form_with url: subscriptions_path, method: :post do %>
            <%= button_tag type: "submit",
                class: "w-full py-4 px-6 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-bold text-lg",
                data: { disable_with: "Processing..." } do %>
              <span>Continue to Checkout</span>
            <% end %>
            <p class="text-xs text-center text-gray-500 mt-2">
              Enter email during checkout, create account after
            </p>
          <% end %>

          <!-- Divider -->
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-white text-gray-500">or</span>
            </div>
          </div>

          <!-- Option 2: Sign up first -->
          <%= link_to "Sign Up First, Then Subscribe", new_registration_path(return_to: new_subscription_path),
              class: "block text-center py-4 px-6 border-2 border-primary-600 text-primary-600 rounded-lg hover:bg-primary-50 transition-colors font-bold text-lg" %>
          <p class="text-xs text-center text-gray-500 -mt-4">
            Create your account first, then proceed to checkout
          </p>

          <%= link_to "Back to Pricing", pricing_path,
              class: "block text-center py-3 text-gray-600 hover:text-gray-800 mt-4" %>
        </div>

        <p class="text-sm text-gray-500 text-center mt-6">
          Secure payment by Stripe. Cancel anytime, no questions asked.
        </p>
      <% end %>
    </div>
  </div>
</div>
