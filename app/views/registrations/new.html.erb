<% content_for :title, "Sign Up" %>
<% content_for :meta_description, "Create your free PlanMyDay account and start managing tasks the ADHD-friendly way. No credit card required. Brain dump with voice input, limit daily tasks, and stay focused with built-in timers." %>
<% content_for :canonical_url, new_registration_url %>
<% content_for :hide_beta_badge, true %>

<div class="min-h-screen flex bg-gradient-to-br from-primary-50 via-white to-secondary-50">
  <!-- Left side - Form -->
  <div class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
      <!-- Logo and back link -->
      <div class="mb-8">
        <%= link_to root_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-primary-600 transition-colors mb-8" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to home
        <% end %>
        
        <h1 class="text-3xl font-bold text-primary-700">
          PlanMyDay
        </h1>
      </div>

      <!-- Progress indicator -->
      <div class="mb-8">
        <div class="flex items-center">
          <div class="flex-1">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-primary-600 rounded-full flex items-center justify-center text-white font-bold">
                1
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Create account</p>
                <p class="text-xs text-gray-500">Just the basics</p>
              </div>
            </div>
          </div>
          <div class="flex-1">
            <div class="flex items-center opacity-50">
              <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center text-white font-bold">
                2
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-500">Set preferences</p>
                <p class="text-xs text-gray-400">Optional setup</p>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-4 h-2 bg-gray-200 rounded-full">
          <div class="h-2 bg-gradient-to-r from-primary-600 to-secondary-700 rounded-full" style="width: 50%"></div>
        </div>
      </div>

      <!-- Sign up form -->
      <div class="bg-white rounded-2xl shadow-xl p-8 mb-24">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">
          Welcome to PlanMyDay!
        </h2>
        <p class="text-gray-600 mb-6">
          Let's create your account and start managing tasks the ADHD-friendly way
        </p>
        
        <%= form_with model: @user, url: registration_path, class: "space-y-6" do |form| %>
          <% if @user.errors.any? %>
            <div class="rounded-xl bg-red-50 border-2 border-red-200 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    Oops! <%= pluralize(@user.errors.count, "thing") %> needs fixing:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= form.label :first_name, "First name", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :first_name, 
                  class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-lg transition-all",
                  placeholder: "Jane",
                  required: true,
                  autofocus: true %>
            </div>
            <div>
              <%= form.label :last_name, "Last name", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :last_name, 
                  class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-lg transition-all",
                  placeholder: "Doe",
                  required: true %>
            </div>
          </div>

          <div>
            <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.email_field :email_address, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-lg transition-all",
                placeholder: "jane@example.com",
                required: true %>
            <p class="mt-1 text-xs text-gray-500">We'll never share your email with anyone</p>
          </div>

          <div>
            <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.password_field :password, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-lg transition-all",
                placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
                required: true %>
            <p class="mt-1 text-xs text-gray-500">At least 8 characters</p>
          </div>

          <div>
            <%= form.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.password_field :password_confirmation, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-lg transition-all",
                placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
                required: true %>
          </div>

          <div class="space-y-4">
            <%= form.submit "Create Account",
                class: "w-full py-4 px-6 border border-transparent text-lg font-medium rounded-xl text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all transform hover:scale-[1.02] cursor-pointer" %>
            
            <p class="text-center text-sm text-gray-600">
              By signing up, you agree to our
              <%= link_to "Terms", terms_path, class: "text-primary-600 hover:text-primary-700" %> and
              <%= link_to "Privacy Policy", privacy_path, class: "text-primary-600 hover:text-primary-700" %>
            </p>
          </div>
          
          <div class="text-center pt-4 border-t">
            <span class="text-gray-600">
              Already have an account?
              <%= link_to "Sign in", new_session_path, class: "font-medium text-primary-600 hover:text-primary-700 ml-1" %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right side - Features reminder -->
  <div class="hidden lg:flex lg:flex-1 items-center justify-center bg-gradient-to-br from-primary-600 to-secondary-700 text-white p-12">
    <div class="max-w-md">
      <h3 class="text-3xl font-bold mb-6">
        You're about to join thousands of freelancers who finally found focus
      </h3>
      
      <div class="space-y-6">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
              <span class="text-2xl">üß†</span>
            </div>
          </div>
          <div class="ml-4">
            <h4 class="font-semibold text-lg">Brain dump everything</h4>
            <p class="text-primary-100">Get racing thoughts out fast with voice or text</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
              <span class="text-2xl">üéØ</span>
            </div>
          </div>
          <div class="ml-4">
            <h4 class="font-semibold text-lg">Focus on 3-5 tasks only</h4>
            <p class="text-primary-100">No more overwhelming lists that paralyze you</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
              <span class="text-2xl">üèÜ</span>
            </div>
          </div>
          <div class="ml-4">
            <h4 class="font-semibold text-lg">Get instant rewards</h4>
            <p class="text-primary-100">Points and achievements that make tasks fun</p>
          </div>
        </div>
      </div>
      
      <div class="mt-12 pt-8 border-t border-white/20">
        <p class="text-sm text-primary-100">
          "PlanMyDay changed how I work. I actually finish my tasks now!"
        </p>
        <p class="text-sm font-medium mt-2">- Sarah K., Freelance Designer</p>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>