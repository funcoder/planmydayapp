<header class="bg-white shadow-sm sticky top-0 z-50" data-controller="mobile-menu">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Brand -->
      <div class="flex items-center">
        <%= link_to dashboard_path, class: "flex items-center gap-2 group" do %>
          <div class="w-8 h-8 bg-gradient-to-br from-primary-600 to-secondary-700 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg">P</span>
          </div>
          <span class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors hidden sm:inline">PlanMyDay</span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        <%= link_to "Dashboard", dashboard_path, class: "px-4 py-2 rounded-lg transition-colors font-medium #{current_page?(dashboard_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:text-primary-600 hover:bg-gray-50'}" %>
        <%= link_to "Backlog", tasks_path, class: "px-4 py-2 rounded-lg transition-colors font-medium #{current_page?(tasks_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:text-primary-600 hover:bg-gray-50'}" %>
        <% if current_user&.can_access_calendar? %>
          <%= link_to "Calendar", calendar_path, class: "px-4 py-2 rounded-lg transition-colors font-medium #{current_page?(calendar_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:text-primary-600 hover:bg-gray-50'}" %>
        <% else %>
          <%= link_to pricing_path, class: "px-4 py-2 text-gray-400 hover:text-primary-600 hover:bg-yellow-50 rounded-lg transition-colors font-medium flex items-center gap-1", title: "Upgrade to Pro for Calendar" do %>
            <span>Calendar</span>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
          <% end %>
        <% end %>
        <% if current_user&.can_access_sprites? %>
          <%= link_to "Sprites", sprites_path, class: "px-4 py-2 rounded-lg transition-colors font-medium #{current_page?(sprites_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:text-primary-600 hover:bg-gray-50'}" %>
        <% else %>
          <%= link_to pricing_path, class: "px-4 py-2 text-gray-400 hover:text-primary-600 hover:bg-yellow-50 rounded-lg transition-colors font-medium flex items-center gap-1", title: "Upgrade to Pro for Sprites" do %>
            <span>Sprites</span>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
          <% end %>
        <% end %>
        <%= link_to "Feedback", new_feedback_path, class: "px-4 py-2 rounded-lg transition-colors font-medium #{current_page?(new_feedback_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:text-primary-600 hover:bg-gray-50'}" %>
      </nav>

      <!-- Right Side: User Menu -->
      <div class="hidden lg:flex items-center gap-4">
        <% unless current_user&.pro? %>
          <%= link_to "Upgrade to Pro", pricing_path, class: "px-4 py-2 bg-gradient-to-r from-yellow-400 to-yellow-500 hover:from-yellow-500 hover:to-yellow-600 text-yellow-900 rounded-lg font-semibold transition-all shadow-sm hover:shadow" %>
        <% end %>

        <!-- User Dropdown -->
        <div class="relative" data-controller="user-menu">
          <button type="button" data-action="click->user-menu#toggle" class="flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-gray-50 transition-colors touch-manipulation">
            <div class="w-8 h-8 bg-gradient-to-br from-primary-600 to-secondary-700 rounded-full flex items-center justify-center">
              <span class="text-white font-semibold text-sm"><%= current_user.first_name[0].upcase %></span>
            </div>
            <div class="text-left">
              <div class="flex items-center gap-2">
                <span class="text-sm font-medium text-gray-900"><%= current_user.first_name %></span>
                <% if current_user.pro? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold bg-yellow-100 text-yellow-800">
                    PRO
                  </span>
                <% end %>
              </div>
            </div>
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <!-- Dropdown Menu -->
          <div data-user-menu-target="menu" class="hidden absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 py-1">
            <div class="px-4 py-3 border-b border-gray-100">
              <p class="text-sm font-medium text-gray-900"><%= current_user.full_name %></p>
              <p class="text-xs text-gray-500 truncate"><%= current_user.email_address %></p>
            </div>
            <%= link_to profile_path, class: "block px-4 py-3 text-base #{current_page?(profile_path) ? 'bg-primary-50 text-primary-700' : 'text-gray-700 hover:bg-gray-50'} touch-manipulation" do %>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span>Profile</span>
              </div>
            <% end %>
            <% if current_user.pro? %>
              <%= link_to manage_subscriptions_path, class: "block px-4 py-3 text-base #{current_page?(manage_subscriptions_path) ? 'bg-primary-50 text-primary-700' : 'text-gray-700 hover:bg-gray-50'} touch-manipulation" do %>
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                  </svg>
                  <span>Manage Subscription</span>
                </div>
              <% end %>
            <% end %>
            <div class="border-t border-gray-100 mt-1 pt-1">
              <%= link_to session_path, data: { "turbo-method": :delete }, class: "block px-4 py-3 text-base text-red-600 hover:bg-red-50 touch-manipulation" do %>
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                  </svg>
                  <span>Sign Out</span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button type="button" data-action="click->mobile-menu#toggle" class="lg:hidden p-3 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors touch-manipulation" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation Menu -->
    <div data-mobile-menu-target="menu" class="hidden lg:hidden pb-4 border-t border-gray-200">
      <div class="flex flex-col gap-1 pt-2">
        <%= link_to "Dashboard", dashboard_path, class: "px-4 py-3 rounded-lg transition-colors font-medium #{current_page?(dashboard_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}" %>
        <%= link_to "Backlog", tasks_path, class: "px-4 py-3 rounded-lg transition-colors font-medium #{current_page?(tasks_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}" %>
        <% if current_user&.can_access_calendar? %>
          <%= link_to "Calendar", calendar_path, class: "px-4 py-3 rounded-lg transition-colors font-medium #{current_page?(calendar_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}" %>
        <% else %>
          <%= link_to "Calendar ðŸ”’ (Pro)", pricing_path, class: "px-4 py-3 text-gray-400 hover:bg-yellow-50 rounded-lg transition-colors font-medium" %>
        <% end %>
        <% if current_user&.can_access_sprites? %>
          <%= link_to "Sprites", sprites_path, class: "px-4 py-3 rounded-lg transition-colors font-medium #{current_page?(sprites_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}" %>
        <% else %>
          <%= link_to "Sprites ðŸ”’ (Pro)", pricing_path, class: "px-4 py-3 text-gray-400 hover:bg-yellow-50 rounded-lg transition-colors font-medium" %>
        <% end %>
        <%= link_to "Feedback", new_feedback_path, class: "px-4 py-3 rounded-lg transition-colors font-medium #{current_page?(new_feedback_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}" %>

        <div class="border-t border-gray-200 mt-2 pt-2">
          <%= link_to profile_path, class: "px-4 py-3 rounded-lg transition-colors font-medium flex items-center gap-2 #{current_page?(profile_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>Profile</span>
          <% end %>
          <% if current_user&.pro? %>
            <%= link_to manage_subscriptions_path, class: "px-4 py-3 rounded-lg transition-colors font-medium flex items-center gap-2 #{current_page?(manage_subscriptions_path) ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50'}" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
              </svg>
              <span>Manage Subscription</span>
            <% end %>
          <% else %>
            <%= link_to "Upgrade to Pro â­", pricing_path, class: "px-4 py-3 bg-gradient-to-r from-yellow-400 to-yellow-500 text-yellow-900 hover:from-yellow-500 hover:to-yellow-600 rounded-lg transition-colors font-semibold text-center" %>
          <% end %>
          <%= link_to session_path, data: { "turbo-method": :delete }, class: "px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-colors font-medium flex items-center gap-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span>Sign Out</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
