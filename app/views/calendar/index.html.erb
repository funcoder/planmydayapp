<div class="min-h-screen bg-gray-50">
  <%= render 'shared/header' %>

  <div class="max-w-7xl mx-auto px-3 sm:px-6 lg:px-8 py-4 sm:py-8">
    <!-- Page Header -->
    <div class="mb-4 sm:mb-6">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Task Calendar</h1>
      <p class="text-sm sm:text-base text-gray-600 mt-1">Your weekly productivity overview</p>
    </div>
    <!-- Week Navigation -->
    <div class="bg-white rounded-xl shadow-lg p-3 sm:p-6 mb-4 sm:mb-6">
      <div class="flex justify-between items-center gap-2">
        <%= link_to calendar_path(week_date: (@week_start - 1.week).to_s),
            class: "flex items-center gap-1 sm:gap-2 px-2 sm:px-4 py-2 bg-primary-100 hover:bg-purple-200 text-primary-700 rounded-lg transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          <span class="hidden sm:inline">Previous Week</span>
        <% end %>

        <div class="text-center flex-1">
          <h2 class="text-base sm:text-2xl font-bold text-gray-800">
            <%= @week_start.strftime("%b %d") %> - <%= @week_end.strftime("%b %d, %Y") %>
          </h2>
          <% if @week_start <= Date.current && @week_end >= Date.current %>
            <p class="text-xs sm:text-sm text-primary-600 font-medium mt-1">Current Week</p>
          <% end %>
        </div>

        <%= link_to calendar_path(week_date: (@week_start + 1.week).to_s),
            class: "flex items-center gap-1 sm:gap-2 px-2 sm:px-4 py-2 bg-primary-100 hover:bg-purple-200 text-primary-700 rounded-lg transition-colors" do %>
          <span class="hidden sm:inline">Next Week</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
      
      <!-- Week Stats -->
      <div class="grid grid-cols-3 gap-2 sm:gap-4 mt-3 sm:mt-6 pt-3 sm:pt-6 border-t">
        <div class="text-center">
          <div class="text-xl sm:text-2xl font-bold text-gray-800"><%= @week_stats[:total_scheduled] %></div>
          <div class="text-xs sm:text-sm text-gray-600">Tasks Scheduled</div>
        </div>
        <div class="text-center">
          <div class="text-xl sm:text-2xl font-bold text-green-600"><%= @week_stats[:total_completed] %></div>
          <div class="text-xs sm:text-sm text-gray-600">Tasks Completed</div>
        </div>
        <div class="text-center">
          <div class="text-xl sm:text-2xl font-bold text-primary-600"><%= @week_stats[:completion_rate] %>%</div>
          <div class="text-xs sm:text-sm text-gray-600">Completion Rate</div>
        </div>
      </div>
    </div>

    <!-- Calendar Grid -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <!-- Mobile: Vertical List -->
      <div class="md:hidden space-y-3 p-3">
        <% (@week_start..@week_end).each do |date| %>
          <div class="bg-white <%= 'ring-2 ring-primary-300' if date == Date.current %> rounded-lg border <%= date == Date.current ? 'border-primary-300 bg-primary-50' : 'border-gray-200' %>">
            <!-- Day Header -->
            <div class="p-3 border-b <%= date == Date.current ? 'border-primary-300 bg-primary-100' : 'border-gray-200' %>">
              <div class="flex justify-between items-center">
                <div>
                  <div class="font-bold text-base <%= date == Date.current ? 'text-primary-700' : 'text-gray-700' %>">
                    <%= date.strftime("%A") %>
                  </div>
                  <div class="text-xs <%= date == Date.current ? 'text-primary-600' : 'text-gray-500' %>">
                    <%= date.strftime("%b %d") %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Tasks for this day -->
            <div class="p-3">
              <% day_tasks = @tasks_by_date[date] %>
              
              <!-- Completed Tasks -->
              <% if day_tasks[:completed].any? %>
                <div class="mb-4">
                  <div class="text-xs font-semibold text-green-600 mb-2">COMPLETED (<%= day_tasks[:completed].count %>)</div>
                  <% day_tasks[:completed].each do |task| %>
                    <%= link_to edit_task_path(task), class: "block mb-2 p-2 bg-green-50 rounded-lg border border-green-200 hover:bg-green-100 hover:border-green-300 transition-colors" do %>
                      <div class="flex items-start gap-1">
                        <svg class="w-3 h-3 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <div class="flex-1">
                          <div class="text-sm font-medium text-gray-700 line-through">
                            <%= truncate(task.title, length: 30) %>
                          </div>
                          <% if task.completed_at %>
                            <div class="text-xs text-gray-500 mt-1">
                              <%= task.completed_at.strftime("%l:%M %p") %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>

              <!-- Scheduled Tasks (not completed) -->
              <% scheduled_incomplete = day_tasks[:scheduled].reject(&:completed?) %>
              <% if scheduled_incomplete.any? %>
                <div>
                  <div class="text-xs font-semibold text-gray-600 mb-2">SCHEDULED (<%= scheduled_incomplete.count %>)</div>
                  <% scheduled_incomplete.each do |task| %>
                    <%= link_to edit_task_path(task), class: "block mb-2 p-2 rounded-lg border-2 hover:opacity-80 transition-colors #{task.status == 'in_progress' ? 'bg-blue-50 border-blue-200 hover:bg-blue-100' : 'bg-gray-50 border-gray-200 hover:bg-gray-100'}" do %>
                      <div class="text-sm font-medium text-gray-700">
                        <%= truncate(task.title, length: 30) %>
                      </div>
                      <div class="text-xs text-gray-500 mt-1">
                        <span class="inline-block px-2 py-0.5 rounded-full
                               <%= task.status == 'in_progress' ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600' %>">
                          <%= task.status.humanize %>
                        </span>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>

              <!-- Empty state -->
              <% if day_tasks[:completed].empty? && scheduled_incomplete.empty? %>
                <div class="text-center text-gray-400 text-sm mt-4">
                  No tasks
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Desktop: 7-Column Grid -->
      <div class="hidden md:grid md:grid-cols-7 gap-px bg-gray-200">
        <% (@week_start..@week_end).each do |date| %>
          <div class="bg-white <%= 'bg-primary-50' if date == Date.current %>">
            <!-- Day Header -->
            <div class="p-4 border-b-2 <%= date == Date.current ? 'border-primary-300 bg-primary-100' : 'border-gray-200' %>">
              <div class="font-bold text-lg <%= date == Date.current ? 'text-primary-700' : 'text-gray-700' %>">
                <%= date.strftime("%A") %>
              </div>
              <div class="text-sm <%= date == Date.current ? 'text-primary-600' : 'text-gray-500' %>">
                <%= date.strftime("%b %d") %>
              </div>
            </div>

            <!-- Tasks for this day -->
            <div class="p-4 min-h-[300px]">
              <% day_tasks = @tasks_by_date[date] %>

              <!-- Completed Tasks -->
              <% if day_tasks[:completed].any? %>
                <div class="mb-4">
                  <div class="text-xs font-semibold text-green-600 mb-2">COMPLETED (<%= day_tasks[:completed].count %>)</div>
                  <% day_tasks[:completed].each do |task| %>
                    <%= link_to edit_task_path(task), class: "block mb-2 p-2 bg-green-50 rounded-lg border border-green-200 hover:bg-green-100 hover:border-green-300 transition-colors" do %>
                      <div class="flex items-start gap-1">
                        <svg class="w-3 h-3 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <div class="flex-1">
                          <div class="text-sm font-medium text-gray-700 line-through">
                            <%= truncate(task.title, length: 30) %>
                          </div>
                          <% if task.completed_at %>
                            <div class="text-xs text-gray-500 mt-1">
                              <%= task.completed_at.strftime("%l:%M %p") %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>

              <!-- Scheduled Tasks (not completed) -->
              <% scheduled_incomplete = day_tasks[:scheduled].reject(&:completed?) %>
              <% if scheduled_incomplete.any? %>
                <div>
                  <div class="text-xs font-semibold text-gray-600 mb-2">SCHEDULED (<%= scheduled_incomplete.count %>)</div>
                  <% scheduled_incomplete.each do |task| %>
                    <%= link_to edit_task_path(task), class: "block mb-2 p-2 rounded-lg border-2 hover:opacity-80 transition-colors #{task.status == 'in_progress' ? 'bg-blue-50 border-blue-200 hover:bg-blue-100' : 'bg-gray-50 border-gray-200 hover:bg-gray-100'}" do %>
                      <div class="text-sm font-medium text-gray-700">
                        <%= truncate(task.title, length: 30) %>
                      </div>
                      <div class="text-xs text-gray-500 mt-1">
                        <span class="inline-block px-2 py-0.5 rounded-full
                               <%= task.status == 'in_progress' ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600' %>">
                          <%= task.status.humanize %>
                        </span>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>

              <!-- Empty state -->
              <% if day_tasks[:completed].empty? && scheduled_incomplete.empty? %>
                <div class="text-center text-gray-400 text-sm mt-8">
                  No tasks
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Legend -->
    <div class="mt-4 sm:mt-6 bg-white rounded-xl shadow-lg p-3 sm:p-4">
      <div class="grid grid-cols-2 sm:flex sm:justify-center gap-3 sm:gap-8 text-xs sm:text-sm">
        <div class="flex items-center gap-2">
          <div class="w-4 h-4 bg-green-50 border border-green-200 rounded"></div>
          <span class="text-gray-600">Completed</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-4 h-4 bg-blue-50 border border-blue-200 rounded"></div>
          <span class="text-gray-600">In Progress</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-4 h-4 bg-gray-50 border border-gray-200 rounded"></div>
          <span class="text-gray-600">Pending</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-4 h-4 bg-primary-100 rounded"></div>
          <span class="text-gray-600">Today</span>
        </div>
      </div>
    </div>
  </div>
</div>
