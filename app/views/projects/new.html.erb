<div class="min-h-screen bg-gradient-to-br from-primary-50 via-white to-secondary-50">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to projects_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-primary-600 transition-colors mb-4" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Projects
      <% end %>

      <h1 class="text-3xl font-bold text-gray-900">Create New Project</h1>
      <p class="text-gray-600 mt-2">Organize your work into a focused project</p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
      <%= form_with model: @project, local: true do |form| %>
        <% if @project.errors.any? %>
          <div class="rounded-lg bg-red-50 border-2 border-red-200 p-4 mb-6">
            <h3 class="text-sm font-medium text-red-800 mb-2">Please fix these issues:</h3>
            <ul class="list-disc pl-5 space-y-1 text-sm text-red-700">
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <!-- Project Name -->
          <div>
            <%= form.label :name, "Project Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :name,
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-lg transition-all",
                placeholder: "e.g., Website Redesign",
                autofocus: true,
                required: true %>
          </div>

          <!-- Description -->
          <div>
            <%= form.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_area :description,
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all",
                placeholder: "What is this project about?",
                rows: 3 %>
          </div>

          <!-- Color -->
          <div>
            <%= form.label :color, "Pick a color", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="flex gap-3 flex-wrap">
              <% %w[#14b8a6 #8b5cf6 #ec4899 #f43f5e #f59e0b #10b981 #06b6d4 #3b82f6].each do |color| %>
                <label class="cursor-pointer">
                  <%= form.radio_button :color, color, class: "sr-only peer", checked: (@project.color == color || (color == '#6366f1' && @project.color.blank?)) %>
                  <div class="w-12 h-12 rounded-lg peer-checked:ring-4 peer-checked:ring-offset-2 peer-checked:ring-purple-500 transition-all"
                       style="background-color: <%= color %>"></div>
                </label>
              <% end %>
            </div>
          </div>

          <!-- Submit -->
          <div class="flex gap-4 pt-4">
            <%= form.submit "Create Project",
                class: "flex-1 py-3 px-6 border border-transparent text-lg font-medium rounded-xl text-white bg-gradient-to-r from-primary-600 to-secondary-700 hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all cursor-pointer" %>

            <%= link_to "Cancel", projects_path,
                class: "px-6 py-3 border-2 border-gray-300 text-lg font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all text-center" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
