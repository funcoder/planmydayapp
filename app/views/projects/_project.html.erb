<div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-xl transition-shadow relative"
     style="border-top: 4px solid <%= project.color || '#6366f1' %>">
  <div class="flex items-start justify-between mb-3">
    <div class="flex-1">
      <h3 class="font-bold text-lg text-gray-900 line-clamp-1"><%= project.name %></h3>
      <% if project.description.present? %>
        <p class="text-gray-600 text-sm mt-1 line-clamp-2"><%= project.description %></p>
      <% end %>
    </div>

    <!-- Dropdown Menu -->
    <div class="relative ml-2" data-controller="dropdown">
      <button type="button" data-action="click->dropdown#toggle" class="p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100 touch-manipulation">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
        </svg>
      </button>
      <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-10">
        <%= link_to edit_project_path(project), class: "block px-4 py-3 text-base text-gray-700 hover:bg-gray-50 touch-manipulation" do %>
          Edit
        <% end %>
        <% if project.status == 'active' %>
          <%= button_to complete_project_path(project), method: :post, class: "block w-full text-left px-4 py-3 text-base text-green-600 hover:bg-green-50 touch-manipulation" do %>
            Mark Complete
          <% end %>
          <%= button_to archive_project_path(project), method: :post, class: "block w-full text-left px-4 py-3 text-base text-gray-600 hover:bg-gray-50 touch-manipulation" do %>
            Archive
          <% end %>
        <% else %>
          <%= button_to reactivate_project_path(project), method: :post, class: "block w-full text-left px-4 py-3 text-base text-primary-600 hover:bg-primary-50 touch-manipulation" do %>
            Reactivate
          <% end %>
        <% end %>
        <%= button_to project_path(project), method: :delete,
            form: { data: { turbo_confirm: "Delete this project? Notes and tasks will be unlinked but not deleted." } },
            class: "block w-full text-left px-4 py-3 text-base text-red-600 hover:bg-red-50 touch-manipulation" do %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="flex flex-wrap gap-3 mt-4 text-sm text-gray-500">
    <div class="flex items-center gap-1">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <span><%= project.notes_count %> notes</span>
    </div>
    <div class="flex items-center gap-1">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
      </svg>
      <span><%= project.completed_tasks_count %>/<%= project.tasks_count %> tasks</span>
    </div>
  </div>

  <!-- Status Badge -->
  <% if project.status != 'active' %>
    <div class="absolute top-3 right-12">
      <span class="px-2 py-1 text-xs font-medium rounded-full <%= project.status == 'completed' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
        <%= project.status.capitalize %>
      </span>
    </div>
  <% end %>

  <!-- Click to View -->
  <%= link_to project_path(project), class: "absolute inset-0 z-0" do %>
    <span class="sr-only">View project</span>
  <% end %>
</div>
