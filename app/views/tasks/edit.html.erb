<div class="min-h-screen bg-gradient-to-br from-primary-50 via-white to-secondary-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to dashboard_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-primary-600 transition-colors mb-4" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Dashboard
      <% end %>
      
      <h1 class="text-3xl font-bold text-gray-900">Edit Task</h1>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
      <% project_colors = @projects&.each_with_object({}) { |p, h| h[p.id.to_s] = p.color } || {} %>
      <%= form_with model: @task, local: true, data: { controller: "project-color", "project-color-colors-value": project_colors.to_json } do |form| %>
        <% if @task.errors.any? %>
          <div class="rounded-lg bg-red-50 border-2 border-red-200 p-4 mb-6">
            <h3 class="text-sm font-medium text-red-800 mb-2">
              Please fix these issues:
            </h3>
            <ul class="list-disc pl-5 space-y-1 text-sm text-red-700">
              <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <!-- Task Title -->
          <div>
            <%= form.label :title, "What do you need to do?", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :title, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-lg transition-all",
                placeholder: "e.g., Finish client proposal",
                autofocus: true,
                required: true %>
          </div>

          <!-- Description (optional) -->
          <div>
            <%= form.label :description, "Any details? (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_area :description, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all",
                placeholder: "Add any notes or context here...",
                rows: 3 %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Priority -->
            <div>
              <%= form.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :priority, 
                  options_for_select([
                    ['Low - Nice to have', 'low'],
                    ['Medium - Should do', 'medium'],
                    ['High - Must do', 'high'],
                    ['Urgent - Do first!', 'urgent']
                  ], @task.priority),
                  {},
                  class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all" %>
            </div>

            <!-- Estimated Time -->
            <div>
              <%= form.label :estimated_time, "Time estimate (minutes)", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.number_field :estimated_time, 
                  class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all",
                  placeholder: "30",
                  min: 5,
                  step: 5 %>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Status -->
            <div>
              <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :status,
                  options_for_select([
                    ['Pending', 'pending'],
                    ['In Progress', 'in_progress'],
                    ['Completed', 'completed']
                  ], @task.status),
                  {},
                  class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all" %>
            </div>

            <!-- Scheduled For -->
            <div>
              <%= form.label :scheduled_for, "Scheduled for", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.date_field :scheduled_for,
                  class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all" %>
            </div>
          </div>

          <% if current_user.can_access_notes? && @projects.present? %>
            <!-- Project -->
            <div>
              <%= form.label :project_id, "Project (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :project_id,
                  options_from_collection_for_select(@projects, :id, :name, @task.project_id),
                  { include_blank: "No project" },
                  class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all",
                  data: { project_color_target: "projectSelect", action: "change->project-color#selectProject" } %>
            </div>
          <% end %>

          <!-- Color -->
          <div>
            <%= form.label :color, "Pick a color", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="flex gap-3 flex-wrap">
              <% %w[#14b8a6 #8b5cf6 #ec4899 #f43f5e #f59e0b #10b981 #06b6d4 #3b82f6].each do |color| %>
                <label class="cursor-pointer">
                  <%= form.radio_button :color, color, class: "sr-only peer", checked: @task.color == color %>
                  <div class="w-12 h-12 rounded-lg peer-checked:ring-4 peer-checked:ring-offset-2 peer-checked:ring-purple-500 transition-all" 
                       style="background-color: <%= color %>"></div>
                </label>
              <% end %>
            </div>
          </div>

          <!-- Tags -->
          <div>
            <%= form.label :tag_list, "Tags (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :tag_list, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all",
                placeholder: "work, urgent, client" %>
            <p class="mt-1 text-xs text-gray-500">Separate tags with commas</p>
          </div>

          <!-- Submit -->
          <div class="flex gap-4">
            <%= form.submit "Update Task", 
                class: "flex-1 py-3 px-6 border border-transparent text-lg font-medium rounded-xl text-white bg-gradient-to-r from-primary-600 to-secondary-700 hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all cursor-pointer" %>
            
            <%= link_to "Cancel", dashboard_path, 
                class: "px-6 py-3 border-2 border-gray-300 text-lg font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>