<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-blue-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to dashboard_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-purple-600 transition-colors mb-4" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Dashboard
      <% end %>
      
      <h1 class="text-3xl font-bold text-gray-900">Add Today's Tasks</h1>
      <p class="text-gray-600 mt-2">Remember: only <%= current_user.daily_task_limit %> tasks per day to stay focused!</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Form -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-lg p-6">
          <%= form_with model: @task, local: true do |form| %>
            <% if @task.errors.any? %>
              <div class="rounded-lg bg-red-50 border-2 border-red-200 p-4 mb-6">
                <h3 class="text-sm font-medium text-red-800 mb-2">
                  Please fix these issues:
                </h3>
                <ul class="list-disc pl-5 space-y-1 text-sm text-red-700">
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="space-y-6">
              <!-- Task Title -->
              <div>
                <%= form.label :title, "What do you need to do?", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :title, 
                    class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-lg transition-all",
                    placeholder: "e.g., Finish client proposal",
                    autofocus: true,
                    required: true %>
              </div>

              <!-- Description (optional) -->
              <div>
                <%= form.label :description, "Any details? (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_area :description, 
                    class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
                    placeholder: "Add any notes or context here...",
                    rows: 3 %>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Priority -->
                <div>
                  <%= form.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= form.select :priority, 
                      options_for_select([
                        ['Low - Nice to have', 'low'],
                        ['Medium - Should do', 'medium'],
                        ['High - Must do', 'high'],
                        ['Urgent - Do first!', 'urgent']
                      ], 'medium'),
                      {},
                      class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all" %>
                </div>

                <!-- Estimated Time -->
                <div>
                  <%= form.label :estimated_time, "Time estimate (minutes)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= form.number_field :estimated_time, 
                      class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
                      placeholder: "30",
                      min: 5,
                      step: 5 %>
                </div>
              </div>

              <!-- Color -->
              <div>
                <%= form.label :color, "Pick a color", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="flex gap-3 flex-wrap">
                  <% %w[#6366f1 #8b5cf6 #ec4899 #f43f5e #f59e0b #10b981 #06b6d4 #3b82f6].each do |color| %>
                    <label class="cursor-pointer">
                      <%= form.radio_button :color, color, class: "sr-only peer" %>
                      <div class="w-12 h-12 rounded-lg peer-checked:ring-4 peer-checked:ring-offset-2 peer-checked:ring-purple-500 transition-all" 
                           style="background-color: <%= color %>"></div>
                    </label>
                  <% end %>
                </div>
              </div>

              <!-- Tags -->
              <div>
                <%= form.label :tag_list, "Tags (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :tag_list, 
                    class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
                    placeholder: "work, urgent, client" %>
                <p class="mt-1 text-xs text-gray-500">Separate tags with commas</p>
              </div>

              <!-- Hidden fields -->
              <%= form.hidden_field :scheduled_for, value: Date.current %>
              <%= form.hidden_field :status, value: 'pending' %>
              <%= form.hidden_field :brain_dump_id, value: nil %>

              <!-- Submit -->
              <div class="flex gap-4">
                <%= form.submit "Add Task", 
                    class: "flex-1 py-3 px-6 border border-transparent text-lg font-medium rounded-xl text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all cursor-pointer" %>
                
                <%= link_to "Cancel", dashboard_path, 
                    class: "px-6 py-3 border-2 border-gray-300 text-lg font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick add from brain dumps -->
        <% if @brain_dumps.any? %>
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Recent Brain Dumps</h3>
            <p class="text-sm text-gray-600 mb-4">Click to turn into a task</p>
            <div class="space-y-2">
              <% @brain_dumps.each do |dump| %>
                <button type="button" class="w-full text-left p-3 bg-gray-50 hover:bg-purple-50 rounded-lg transition-colors text-sm"
                        onclick="document.getElementById('task_title').value = '<%= j(dump.content.truncate(100)) %>'; document.getElementById('task_brain_dump_id').value = '<%= dump.id %>';">
                  <%= truncate(dump.content, length: 80) %>
                  <span class="text-xs text-gray-500 block mt-1"><%= time_ago_in_words(dump.created_at) %> ago</span>
                </button>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Tips -->
        <div class="bg-purple-50 rounded-xl p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-3">ADHD-Friendly Tips</h3>
          <ul class="space-y-2 text-sm text-gray-700">
            <li class="flex items-start">
              <span class="text-purple-600 mr-2">✓</span>
              <span>Break big tasks into smaller ones</span>
            </li>
            <li class="flex items-start">
              <span class="text-purple-600 mr-2">✓</span>
              <span>Be realistic with time estimates</span>
            </li>
            <li class="flex items-start">
              <span class="text-purple-600 mr-2">✓</span>
              <span>Put the hardest task when you have most energy</span>
            </li>
            <li class="flex items-start">
              <span class="text-purple-600 mr-2">✓</span>
              <span>Use colors to quickly identify task types</span>
            </li>
          </ul>
        </div>

        <!-- Current task count -->
        <div class="bg-white rounded-xl shadow-lg p-6 text-center">
          <div class="text-3xl font-bold text-purple-600"><%= current_user.tasks.today.count %> / <%= current_user.daily_task_limit %></div>
          <p class="text-sm text-gray-600 mt-1">Tasks scheduled today</p>
        </div>
      </div>
    </div>
  </div>
</div>