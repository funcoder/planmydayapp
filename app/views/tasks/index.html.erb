<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-gradient-to-r from-primary-600 to-secondary-700 text-white" data-controller="mobile-menu">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold">Task Backlog Review</h1>
          <p class="text-primary-100 mt-1 text-sm sm:text-base">Manage all your tasks in one place</p>
        </div>
        
        <!-- Desktop Navigation -->
        <div class="hidden lg:flex gap-4">
          <%= link_to "Dashboard", dashboard_path, class: "bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg transition-colors" %>
          <%= link_to "+ New Task", new_task_path(scheduled: 'backlog'), class: "bg-white text-primary-600 hover:bg-primary-50 px-4 py-2 rounded-lg transition-colors font-medium" %>
        </div>
        
        <!-- Mobile Menu Button -->
        <button data-action="click->mobile-menu#toggle" class="lg:hidden p-2 rounded-lg bg-white/20 hover:bg-white/30 transition-colors" aria-label="Toggle menu">
          <span class="block w-6 h-6 relative">
            <span class="absolute w-full h-0.5 bg-white top-1.5"></span>
            <span class="absolute w-full h-0.5 bg-white top-1/2 -translate-y-1/2"></span>
            <span class="absolute w-full h-0.5 bg-white bottom-1.5"></span>
          </span>
        </button>
      </div>
      
      <!-- Mobile Navigation Menu -->
      <div data-mobile-menu-target="menu" class="hidden mt-4 pt-4 border-t border-white/20">
        <div class="flex flex-col gap-2">
          <%= link_to "Dashboard", dashboard_path, class: "bg-white/20 hover:bg-white/30 px-4 py-3 rounded-lg transition-colors text-center" %>
          <%= link_to "+ New Task", new_task_path(scheduled: 'backlog'), class: "bg-white text-primary-600 hover:bg-primary-50 px-4 py-3 rounded-lg transition-colors font-medium text-center" %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-8" data-controller="task-filter">
      <div class="flex flex-wrap gap-4 items-center">
        <div class="flex gap-2">
          <button class="px-4 py-2 rounded-lg bg-primary-600 text-white" data-action="click->task-filter#filter" data-filter-value="all">All Tasks</button>
          <button class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-700" data-action="click->task-filter#filter" data-filter-value="today">Today</button>
          <button class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-700" data-action="click->task-filter#filter" data-filter-value="pending">Pending</button>
          <button class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-700" data-action="click->task-filter#filter" data-filter-value="completed">Completed</button>
        </div>
        <div class="ml-auto text-sm text-gray-500">
          Total: <%= @tasks.count %> tasks
        </div>
      </div>
    </div>

    <!-- Tasks List -->
    <div class="bg-white rounded-xl shadow-lg p-6" data-task-filter-target="container">
      <% if @tasks.any? %>
        <div class="space-y-4" id="tasks-list">
          <% @tasks.each do |task| %>
            <%= turbo_frame_tag dom_id(task) do %>
              <div class="task-item p-4 rounded-lg border-2 border-gray-200 hover:border-primary-300 transition-colors"
                   data-task-filter-target="task"
                   data-status="<%= task.status %>"
                   data-scheduled="<%= task.scheduled_for&.to_date == Date.current ? 'today' : 'other' %>"
                   style="border-left: 4px solid <%= task.color || '#14b8a6' %>">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-3">
                      <h3 class="font-semibold text-lg"><%= task.title %></h3>
                      <% if task.status == 'completed' %>
                        <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">‚úì Completed</span>
                      <% elsif task.status == 'in_progress' %>
                        <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">In Progress</span>
                      <% else %>
                        <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-700">Pending</span>
                      <% end %>
                    </div>
                    
                    <% if task.description.present? %>
                      <p class="text-gray-600 text-sm mt-2"><%= truncate(task.description, length: 150) %></p>
                    <% end %>
                    
                    <div class="flex gap-3 mt-3">
                      <span class="priority-badge px-2 py-1 text-xs rounded-full bg-<%= task.priority == 'urgent' ? 'red' : task.priority == 'high' ? 'orange' : task.priority == 'medium' ? 'yellow' : 'green' %>-100 text-<%= task.priority == 'urgent' ? 'red' : task.priority == 'high' ? 'orange' : task.priority == 'medium' ? 'yellow' : 'green' %>-800">
                        <%= task.priority.capitalize %>
                      </span>
                      <% if task.estimated_time.present? %>
                        <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-700">
                          ‚è± <%= task.estimated_time %> min
                        </span>
                      <% end %>
                      <% if task.scheduled_for.present? %>
                        <span class="px-2 py-1 text-xs rounded-full bg-primary-100 text-primary-700">
                          üìÖ <%= task.scheduled_for.strftime("%b %d") %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                  
                  <div class="flex items-center gap-2 ml-4">
                    <% unless task.scheduled_for == Date.current %>
                      <%= button_to schedule_for_today_task_path(task),
                          method: :post,
                          class: "p-2 text-gray-400 hover:text-green-600 transition-colors",
                          title: "Add to today" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      <% end %>
                    <% end %>

                    <%= link_to edit_task_path(task),
                        data: { turbo_frame: "_top" },
                        class: "p-2 text-gray-400 hover:text-primary-600 transition-colors",
                        title: "Edit task" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>

                    <%= button_to task_path(task),
                        method: :delete,
                        form: { data: { turbo_confirm: "Are you sure you want to delete this task?" } },
                        class: "p-2 text-gray-400 hover:text-red-600 transition-colors",
                        title: "Delete task" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">üìã</div>
          <p class="text-gray-600 mb-4">No tasks in your backlog</p>
          <%= link_to "Create Your First Task", new_task_path(scheduled: 'backlog'), 
              class: "inline-block px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

