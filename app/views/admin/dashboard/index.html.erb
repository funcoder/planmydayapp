<% content_for :title, "Admin Dashboard" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
      <p class="text-gray-600 mt-2">Subscriber statistics and app metrics</p>
    </div>

    <!-- User Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Users -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Users</p>
            <p class="text-2xl font-bold text-gray-900"><%= @total_users %></p>
          </div>
        </div>
      </div>

      <!-- Free Users -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 p-3 bg-gray-100 rounded-lg">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Free Users</p>
            <p class="text-2xl font-bold text-gray-900"><%= @free_users %></p>
          </div>
        </div>
      </div>

      <!-- Pro Users -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 p-3 bg-primary-100 rounded-lg">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Pro Subscribers</p>
            <p class="text-2xl font-bold text-gray-900"><%= @pro_users %></p>
          </div>
        </div>
      </div>

      <!-- Lifetime Users -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Lifetime Members</p>
            <p class="text-2xl font-bold text-gray-900"><%= @lifetime_users %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Subscription Status & Revenue -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Subscription Status -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Subscription Status</h2>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Active Subscriptions</span>
            <span class="font-semibold text-green-600"><%= @active_subscriptions %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Cancelling (Grace Period)</span>
            <span class="font-semibold text-amber-600"><%= @cancelling_subscriptions %></span>
          </div>
          <div class="border-t pt-4 flex justify-between items-center">
            <span class="text-gray-900 font-medium">Total Paying Customers</span>
            <span class="font-bold text-gray-900"><%= @pro_users + @lifetime_users %></span>
          </div>
        </div>
      </div>

      <!-- Revenue -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Revenue</h2>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Monthly Recurring (MRR)</span>
            <span class="font-semibold text-green-600">$<%= number_with_precision(@monthly_recurring_revenue, precision: 2) %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Lifetime Revenue (Total)</span>
            <span class="font-semibold text-amber-600">$<%= number_with_precision(@lifetime_revenue, precision: 2) %></span>
          </div>
          <div class="border-t pt-4 flex justify-between items-center">
            <span class="text-gray-900 font-medium">Estimated Annual Revenue</span>
            <span class="font-bold text-gray-900">$<%= number_with_precision(@monthly_recurring_revenue * 12 + @lifetime_revenue, precision: 2) %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Growth -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Recent Signups</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <p class="text-3xl font-bold text-gray-900"><%= @users_today %></p>
          <p class="text-sm text-gray-500 mt-1">Today</p>
        </div>
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <p class="text-3xl font-bold text-gray-900"><%= @users_this_week %></p>
          <p class="text-sm text-gray-500 mt-1">This Week</p>
        </div>
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <p class="text-3xl font-bold text-gray-900"><%= @users_this_month %></p>
          <p class="text-sm text-gray-500 mt-1">This Month</p>
        </div>
      </div>
    </div>

    <!-- Feedback Section -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-bold text-gray-900">User Feedback</h2>
        <div class="flex gap-3">
          <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
            <%= @new_feedback_count %> new
          </span>
          <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium">
            <%= @in_progress_feedback_count %> in progress
          </span>
        </div>
      </div>

      <% if @feedbacks.any? %>
        <div class="space-y-4">
          <% @feedbacks.each do |feedback| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:border-gray-300 transition-colors">
              <div class="flex justify-between items-start gap-4">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 mb-1">
                    <span class="px-2 py-0.5 text-xs font-medium rounded-full
                      <%= case feedback.feedback_type
                          when 'bug_report' then 'bg-red-100 text-red-800'
                          when 'feature_request' then 'bg-purple-100 text-purple-800'
                          when 'general_feedback' then 'bg-blue-100 text-blue-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= feedback.feedback_type.titleize %>
                    </span>
                    <span class="px-2 py-0.5 text-xs font-medium rounded-full
                      <%= case feedback.status
                          when 'new' then 'bg-blue-100 text-blue-800'
                          when 'in_progress' then 'bg-yellow-100 text-yellow-800'
                          when 'resolved' then 'bg-green-100 text-green-800'
                          when 'closed' then 'bg-gray-100 text-gray-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= feedback.status.titleize %>
                    </span>
                  </div>
                  <h4 class="font-semibold text-gray-900"><%= feedback.subject %></h4>
                  <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= feedback.message %></p>
                  <div class="flex items-center gap-3 mt-2 text-xs text-gray-500">
                    <span>From: <%= feedback.user.email %></span>
                    <span><%= time_ago_in_words(feedback.created_at) %> ago</span>
                  </div>
                </div>

                <div class="flex items-center gap-2 flex-shrink-0">
                  <!-- Status Actions -->
                  <div class="relative" data-controller="dropdown">
                    <button class="px-3 py-1.5 text-sm text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors"
                            data-action="click->dropdown#toggle">
                      Status
                    </button>
                    <div class="hidden absolute right-0 mt-2 w-40 bg-white rounded-lg shadow-lg border border-gray-200 z-10"
                         data-dropdown-target="menu">
                      <%= link_to "Mark as Todo", admin_update_feedback_status_path(feedback, status: 'in_progress'),
                          data: { turbo_method: :post },
                          class: "block px-4 py-2 text-sm text-yellow-700 hover:bg-yellow-50" %>
                      <%= link_to "Mark Resolved", admin_update_feedback_status_path(feedback, status: 'resolved'),
                          data: { turbo_method: :post },
                          class: "block px-4 py-2 text-sm text-green-700 hover:bg-green-50" %>
                      <%= link_to "Close", admin_update_feedback_status_path(feedback, status: 'closed'),
                          data: { turbo_method: :post },
                          class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
                    </div>
                  </div>

                  <!-- Delete -->
                  <%= link_to admin_destroy_feedback_path(feedback),
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to delete this feedback?"
                      },
                      class: "p-1.5 text-gray-400 hover:text-red-600 transition-colors" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
          </svg>
          <p class="text-gray-500">No feedback submitted yet</p>
        </div>
      <% end %>
    </div>

    <!-- Quick Links -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Quick Links</h3>
      <div class="flex flex-wrap gap-4">
        <%= link_to admin_settings_path, class: "inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm font-medium text-gray-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Admin Settings
        <% end %>
        <%= link_to pricing_path, class: "inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm font-medium text-gray-700 transition-colors", target: "_blank" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          View Pricing Page
        <% end %>
        <%= link_to dashboard_path, class: "inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm font-medium text-gray-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          User Dashboard
        <% end %>
      </div>
    </div>

  </div>
</div>
