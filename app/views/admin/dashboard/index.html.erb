<% content_for :title, "Admin Dashboard" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
      <p class="text-gray-600 mt-2">Overview of users and subscriptions</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
      <!-- Total Users -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="text-sm font-medium text-gray-500">Total Users</div>
        <div class="text-3xl font-bold text-gray-900 mt-1"><%= @stats[:total_users] %></div>
      </div>

      <!-- Pro Subscribers -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="text-sm font-medium text-gray-500">Pro Subscribers</div>
        <div class="text-3xl font-bold text-green-600 mt-1"><%= @stats[:pro_subscribers] %></div>
        <div class="text-xs text-gray-500 mt-1"><%= @stats[:active_subscriptions] %> active</div>
      </div>

      <!-- Lifetime Subscribers -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="text-sm font-medium text-gray-500">Lifetime Members</div>
        <div class="text-3xl font-bold text-purple-600 mt-1"><%= @stats[:lifetime_subscribers] %></div>
      </div>

      <!-- Free Users -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="text-sm font-medium text-gray-500">Free Users</div>
        <div class="text-3xl font-bold text-gray-600 mt-1"><%= @stats[:free_users] %></div>
      </div>
    </div>

    <!-- Growth Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="text-sm font-medium text-gray-500">New Users Today</div>
        <div class="text-2xl font-bold text-blue-600 mt-1"><%= @stats[:new_users_today] %></div>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="text-sm font-medium text-gray-500">New Users This Week</div>
        <div class="text-2xl font-bold text-blue-600 mt-1"><%= @stats[:new_users_this_week] %></div>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="text-sm font-medium text-gray-500">New Users This Month</div>
        <div class="text-2xl font-bold text-blue-600 mt-1"><%= @stats[:new_users_this_month] %></div>
      </div>
    </div>

    <!-- Subscription Health -->
    <% if @stats[:cancelling_subscriptions] > 0 || @stats[:past_due_subscriptions] > 0 %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-8">
        <h3 class="text-sm font-semibold text-yellow-800 mb-2">Subscription Alerts</h3>
        <div class="flex gap-6 text-sm">
          <% if @stats[:cancelling_subscriptions] > 0 %>
            <span class="text-yellow-700">
              <%= @stats[:cancelling_subscriptions] %> cancelling
            </span>
          <% end %>
          <% if @stats[:past_due_subscriptions] > 0 %>
            <span class="text-red-700">
              <%= @stats[:past_due_subscriptions] %> past due
            </span>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Recent Users -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Recent Users</h2>
        <div class="space-y-3">
          <% @recent_users.each do |user| %>
            <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-0">
              <div>
                <div class="font-medium text-gray-900"><%= user.full_name.presence || "No name" %></div>
                <div class="text-sm text-gray-500"><%= user.email_address %></div>
              </div>
              <div class="text-right">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case user.subscription_tier
                      when 'pro' then 'bg-green-100 text-green-800'
                      when 'lifetime' then 'bg-purple-100 text-purple-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= user.subscription_tier.capitalize %>
                </span>
                <div class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(user.created_at) %> ago</div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Subscribers -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Recent Subscribers</h2>
        <% if @recent_subscribers.any? %>
          <div class="space-y-3">
            <% @recent_subscribers.each do |user| %>
              <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-0">
                <div>
                  <div class="font-medium text-gray-900"><%= user.full_name.presence || "No name" %></div>
                  <div class="text-sm text-gray-500"><%= user.email_address %></div>
                </div>
                <div class="text-right">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= user.subscription_tier == 'lifetime' ? 'bg-purple-100 text-purple-800' : 'bg-green-100 text-green-800' %>">
                    <%= user.subscription_tier.capitalize %>
                  </span>
                  <div class="text-xs text-gray-500 mt-1">
                    <%= user.subscription_status %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">No subscribers yet</p>
        <% end %>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="mt-8 bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Admin Links</h3>
      <div class="flex gap-4">
        <%= link_to "Settings", admin_settings_path, class: "text-primary-600 hover:text-primary-700 text-sm" %>
        <%= link_to "View Pricing Page", pricing_path, class: "text-primary-600 hover:text-primary-700 text-sm", target: "_blank" %>
        <%= link_to "Back to Dashboard", dashboard_path, class: "text-primary-600 hover:text-primary-700 text-sm" %>
      </div>
    </div>

  </div>
</div>
