<% content_for :title, "Admin Settings" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Admin Settings</h1>
      <p class="text-gray-600 mt-2">Manage application settings and pricing</p>
    </div>

    <!-- Lifetime Offer Toggle -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-xl font-bold text-gray-900 mb-1">Lifetime Offer</h2>
          <p class="text-gray-600 text-sm">Show or hide the $49.99 lifetime plan on the pricing page</p>
          <p class="text-xs text-gray-500 mt-2">
            Current status:
            <span class="font-semibold <%= @lifetime_offer_enabled ? 'text-green-600' : 'text-red-600' %>">
              <%= @lifetime_offer_enabled ? 'ENABLED' : 'DISABLED' %>
            </span>
          </p>
        </div>

        <div>
          <%= button_to toggle_lifetime_offer_admin_settings_path,
                method: :post,
                class: "px-6 py-3 rounded-lg font-semibold transition-colors #{@lifetime_offer_enabled ? 'bg-red-600 hover:bg-red-700 text-white' : 'bg-green-600 hover:bg-green-700 text-white'}",
                data: { turbo_confirm: "Are you sure you want to #{@lifetime_offer_enabled ? 'disable' : 'enable'} the lifetime offer?" } do %>
            <%= @lifetime_offer_enabled ? 'Disable Lifetime Offer' : 'Enable Lifetime Offer' %>
          <% end %>
        </div>
      </div>

      <% if @lifetime_offer_enabled %>
        <div class="mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
          <p class="text-sm text-green-800">
            ‚úÖ The lifetime offer is currently displayed on the pricing page at $49.99
          </p>
        </div>
      <% else %>
        <div class="mt-6 p-4 bg-gray-50 border border-gray-200 rounded-lg">
          <p class="text-sm text-gray-700">
            ‚ö†Ô∏è The lifetime offer is currently hidden. Only the monthly plan will be shown on the pricing page.
          </p>
        </div>
      <% end %>
    </div>

    <!-- Quick Links -->
    <div class="mt-8 bg-white rounded-lg shadow-sm p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Quick Links</h3>
      <div class="space-y-2">
        <%= link_to "View Pricing Page", pricing_path, class: "text-primary-600 hover:text-primary-700 text-sm block", target: "_blank" %>
        <%= link_to "Back to Dashboard", dashboard_path, class: "text-primary-600 hover:text-primary-700 text-sm block" %>
      </div>
    </div>

    <!-- Instructions -->
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
      <h3 class="text-lg font-bold text-blue-900 mb-2">üí° How to Setup</h3>
      <ol class="list-decimal list-inside space-y-2 text-sm text-blue-800">
        <li>Create a one-time payment product in Stripe Dashboard for $49.99</li>
        <li>Get the price ID (starts with price_...)</li>
        <li>Add it to your environment variables as <code class="bg-blue-100 px-1 py-0.5 rounded">STRIPE_LIFETIME_PRICE_ID</code></li>
        <li>Update the admin email check in <code class="bg-blue-100 px-1 py-0.5 rounded">admin/settings_controller.rb</code></li>
      </ol>
    </div>

  </div>
</div>
