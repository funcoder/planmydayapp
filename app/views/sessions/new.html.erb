<% content_for :title, "Sign In" %>
<% content_for :hide_beta_badge, true %>

<div class="min-h-screen flex bg-gradient-to-br from-primary-50 via-white to-secondary-50">
  <!-- Left side - Features reminder -->
  <div class="hidden lg:flex lg:flex-1 items-center justify-center bg-gradient-to-br from-primary-600 to-secondary-700 text-white p-12">
    <div class="max-w-md">
      <h3 class="text-3xl font-bold mb-6">
        Welcome back to your ADHD-friendly productivity space
      </h3>
      
      <div class="space-y-6">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
              <span class="text-2xl">üìä</span>
            </div>
          </div>
          <div class="ml-4">
            <h4 class="font-semibold text-lg">Check your progress</h4>
            <p class="text-primary-100">See your points, streaks, and achievements</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
              <span class="text-2xl">‚úÖ</span>
            </div>
          </div>
          <div class="ml-4">
            <h4 class="font-semibold text-lg">Complete today's tasks</h4>
            <p class="text-primary-100">Your focused list is waiting for you</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center">
              <span class="text-2xl">‚è±Ô∏è</span>
            </div>
          </div>
          <div class="ml-4">
            <h4 class="font-semibold text-lg">Start a focus session</h4>
            <p class="text-primary-100">Beat time blindness with Pomodoro timer</p>
          </div>
        </div>
      </div>
      
      <div class="mt-12 pt-8 border-t border-white/20">
        <div class="flex items-center space-x-4">
          <div class="text-center">
            <div class="text-3xl font-bold">92%</div>
            <div class="text-sm text-primary-100">of users report better focus</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold">3x</div>
            <div class="text-sm text-primary-100">more tasks completed daily</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right side - Form -->
  <div class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
      <!-- Logo and back link -->
      <div class="mb-8">
        <%= link_to root_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-primary-600 transition-colors mb-8" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to home
        <% end %>
        
        <h1 class="text-3xl font-bold text-primary-700">
          PlanMyDay
        </h1>
      </div>

      <!-- Sign in form -->
      <div class="bg-white rounded-2xl shadow-xl p-8 mb-24">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">
          Welcome back!
        </h2>
        <p class="text-gray-600 mb-6">
          Let's make today productive and ADHD-friendly
        </p>
        
        <%= form_with url: session_path, method: :post, class: "space-y-6", data: { turbo: false } do |form| %>
          <% if flash[:alert] %>
            <div class="rounded-xl bg-red-50 border-2 border-red-200 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= flash[:alert] %>
                  </h3>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if flash[:notice] %>
            <div class="rounded-xl bg-green-50 border-2 border-green-200 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-green-800">
                    <%= flash[:notice] %>
                  </h3>
                </div>
              </div>
            </div>
          <% end %>
          
          <div>
            <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.email_field :email_address, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-lg transition-all",
                placeholder: "jane@example.com",
                required: true,
                autofocus: true,
                autocomplete: "username",
                value: params[:email_address] %>
          </div>

          <div>
            <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.password_field :password, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-lg transition-all",
                placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
                required: true,
                autocomplete: "current-password",
                maxlength: 72 %>
            <div class="mt-2 text-right">
              <%= link_to "Forgot your password?", new_password_path, class: "text-sm text-primary-600 hover:text-primary-700" %>
            </div>
          </div>

          <div class="flex items-center">
            <input type="checkbox" id="remember_me" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
            <label for="remember_me" class="ml-2 block text-sm text-gray-700">
              Keep me signed in
            </label>
          </div>

          <div class="space-y-4">
            <%= form.submit "Sign In",
                type: "submit",
                class: "w-full py-4 px-6 border border-transparent text-lg font-medium rounded-xl text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors cursor-pointer touch-manipulation",
                style: "pointer-events: auto; -webkit-tap-highlight-color: rgba(0,0,0,0.1);" %>
          </div>

          <div class="text-center pt-8 mt-8 border-t">
            <span class="text-gray-600">
              New to PlanMyDay?
              <%= link_to "Create an account", new_registration_path, class: "font-medium text-primary-600 hover:text-primary-700 ml-1" %>
            </span>
          </div>
        <% end %>

        <!-- Quick demo option -->
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-500">
            Want to see how it works first?
          </p>
          <button type="button" class="text-sm font-medium text-primary-600 hover:text-primary-700 mt-1">
            Watch 2-minute demo
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Animated background elements - temporarily disabled for iOS debugging -->
<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>

