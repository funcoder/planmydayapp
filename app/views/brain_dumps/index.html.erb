<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-gradient-to-r from-purple-600 to-blue-600 text-white" data-controller="mobile-menu">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold">Brain Dump Processing</h1>
          <p class="text-purple-100 mt-1 text-sm sm:text-base">Turn your thoughts into actionable tasks</p>
        </div>
        
        <!-- Desktop Navigation -->
        <div class="hidden lg:flex gap-4">
          <%= link_to "Dashboard", dashboard_path, class: "bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg transition-colors" %>
        </div>
        
        <!-- Mobile Menu Button -->
        <button data-action="click->mobile-menu#toggle" class="lg:hidden p-2 rounded-lg bg-white/20 hover:bg-white/30 transition-colors" aria-label="Toggle menu">
          <span class="block w-6 h-6 relative">
            <span class="absolute w-full h-0.5 bg-white top-1.5"></span>
            <span class="absolute w-full h-0.5 bg-white top-1/2 -translate-y-1/2"></span>
            <span class="absolute w-full h-0.5 bg-white bottom-1.5"></span>
          </span>
        </button>
      </div>
      
      <!-- Mobile Navigation Menu -->
      <div data-mobile-menu-target="menu" class="hidden mt-4 pt-4 border-t border-white/20">
        <div class="flex flex-col gap-2">
          <%= link_to "Dashboard", dashboard_path, class: "bg-white/20 hover:bg-white/30 px-4 py-3 rounded-lg transition-colors text-center" %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if @brain_dumps.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @brain_dumps.each do |brain_dump| %>
          <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="mb-4">
              <p class="text-gray-800 text-lg"><%= brain_dump.content %></p>
            </div>
            
            <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
              <span><%= time_ago_in_words(brain_dump.created_at) %> ago</span>
              <span class="px-2 py-1 rounded-full <%= brain_dump.processed? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= brain_dump.processed? ? 'Processed' : 'Pending' %>
              </span>
            </div>
            
            <% unless brain_dump.processed? %>
              <div class="space-y-3">
                <h4 class="font-semibold text-gray-700">Convert to tasks:</h4>
                
                <%= form_with url: process_dump_brain_dump_path(brain_dump), method: :post, local: true do |form| %>
                  <div class="space-y-2 mb-4">
                    <!-- Quick task creation from brain dump -->
                    <div class="flex gap-2">
                      <input type="text" 
                             name="task_titles[]" 
                             placeholder="Task 1..." 
                             class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:border-purple-400 focus:outline-none text-sm">
                      <select name="task_priorities[]" class="px-2 py-2 border border-gray-300 rounded-lg focus:border-purple-400 focus:outline-none text-sm">
                        <option value="low">Low</option>
                        <option value="medium" selected>Medium</option>
                        <option value="high">High</option>
                        <option value="urgent">Urgent</option>
                      </select>
                    </div>
                    
                    <div class="flex gap-2">
                      <input type="text" 
                             name="task_titles[]" 
                             placeholder="Task 2 (optional)..." 
                             class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:border-purple-400 focus:outline-none text-sm">
                      <select name="task_priorities[]" class="px-2 py-2 border border-gray-300 rounded-lg focus:border-purple-400 focus:outline-none text-sm">
                        <option value="low">Low</option>
                        <option value="medium" selected>Medium</option>
                        <option value="high">High</option>
                        <option value="urgent">Urgent</option>
                      </select>
                    </div>
                    
                    <div class="flex gap-2">
                      <input type="text" 
                             name="task_titles[]" 
                             placeholder="Task 3 (optional)..." 
                             class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:border-purple-400 focus:outline-none text-sm">
                      <select name="task_priorities[]" class="px-2 py-2 border border-gray-300 rounded-lg focus:border-purple-400 focus:outline-none text-sm">
                        <option value="low">Low</option>
                        <option value="medium" selected>Medium</option>
                        <option value="high">High</option>
                        <option value="urgent">Urgent</option>
                      </select>
                    </div>
                  </div>
                  
                  <div class="flex gap-2">
                    <%= form.submit "Create Tasks", 
                        class: "flex-1 px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm cursor-pointer" %>
                    <%= link_to "Archive", 
                        archive_brain_dump_path(brain_dump), 
                        data: { turbo_method: :post },
                        class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm" %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="pt-3 border-t border-gray-200">
                <p class="text-sm text-gray-600">âœ“ Processed into tasks</p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-xl shadow-lg p-12 text-center">
        <div class="text-6xl mb-4">ðŸ§ </div>
        <h3 class="text-2xl font-bold text-gray-800 mb-2">No brain dumps yet</h3>
        <p class="text-gray-600 mb-6">Start capturing your thoughts and ideas!</p>
        <%= link_to "Go to Dashboard", dashboard_path, 
            class: "inline-block px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>