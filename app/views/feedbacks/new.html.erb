<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-gradient-to-r from-purple-600 to-blue-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold">Send Feedback</h1>
          <p class="text-purple-100 mt-1">We'd love to hear from you!</p>
        </div>
        <div class="flex items-center gap-4">
          <%= link_to "← Back to Dashboard", dashboard_path, class: "bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: @feedback, url: feedbacks_path, local: true, class: "space-y-6") do |form| %>
    <% if @feedback.errors.any? %>
      <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
        <p class="font-semibold mb-2">Please fix the following errors:</p>
        <ul class="list-disc list-inside">
          <% @feedback.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :feedback_type, "Feedback Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :feedback_type, 
          options_for_select([
            ["Bug Report", "bug_report"],
            ["Feature Request", "feature_request"],
            ["General Feedback", "general_feedback"],
            ["Other", "other"]
          ], @feedback.feedback_type),
          { prompt: "Select a feedback type" },
          class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg p-3" %>
    </div>

    <div>
      <%= form.label :subject, "Subject", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :subject, 
          placeholder: "Brief summary of your feedback",
          class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg p-3",
          maxlength: 200 %>
      <p class="mt-1 text-sm text-gray-500">Maximum 200 characters</p>
    </div>

    <div>
      <%= form.label :message, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :message, 
          rows: 8,
          placeholder: "Please provide as much detail as possible...",
          class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg p-3",
          maxlength: 5000 %>
      <p class="mt-1 text-sm text-gray-500">Maximum 5000 characters</p>
    </div>

    <div class="flex items-center justify-between pt-4">
      <%= link_to "Cancel", dashboard_path, class: "text-gray-600 hover:text-gray-900" %>
      <%= form.submit "Send Feedback", 
          class: "px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 text-white font-medium rounded-lg hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 cursor-pointer transition-all" %>
    </div>
  <% end %>
    </div>
  </div>
</div>