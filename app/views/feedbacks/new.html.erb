<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-gradient-to-r from-primary-600 to-secondary-700 text-white" data-controller="mobile-menu">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold">Send Feedback</h1>
          <p class="text-primary-100 mt-1 text-sm sm:text-base">We'd love to hear from you!</p>
        </div>
        
        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center gap-4">
          <%= link_to "← Back to Dashboard", dashboard_path, class: "bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg transition-colors" %>
        </div>
        
        <!-- Mobile Menu Button -->
        <button data-action="click->mobile-menu#toggle" class="lg:hidden p-2 rounded-lg bg-white/20 hover:bg-white/30 transition-colors" aria-label="Toggle menu">
          <span class="block w-6 h-6 relative">
            <span class="absolute w-full h-0.5 bg-white top-1.5"></span>
            <span class="absolute w-full h-0.5 bg-white top-1/2 -translate-y-1/2"></span>
            <span class="absolute w-full h-0.5 bg-white bottom-1.5"></span>
          </span>
        </button>
      </div>
      
      <!-- Mobile Navigation Menu -->
      <div data-mobile-menu-target="menu" class="hidden mt-4 pt-4 border-t border-white/20">
        <div class="flex flex-col gap-2">
          <%= link_to "← Back to Dashboard", dashboard_path, class: "bg-white/20 hover:bg-white/30 px-4 py-3 rounded-lg transition-colors text-center" %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: @feedback, url: feedbacks_path, local: true, class: "space-y-6") do |form| %>
    <% if @feedback.errors.any? %>
      <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
        <p class="font-semibold mb-2">Please fix the following errors:</p>
        <ul class="list-disc list-inside">
          <% @feedback.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :feedback_type, "Feedback Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :feedback_type, 
          options_for_select([
            ["Bug Report", "bug_report"],
            ["Feature Request", "feature_request"],
            ["General Feedback", "general_feedback"],
            ["Other", "other"]
          ], @feedback.feedback_type),
          { prompt: "Select a feedback type" },
          class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg p-3" %>
    </div>

    <div>
      <%= form.label :subject, "Subject", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :subject, 
          placeholder: "Brief summary of your feedback",
          class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg p-3",
          maxlength: 200 %>
      <p class="mt-1 text-sm text-gray-500">Maximum 200 characters</p>
    </div>

    <div>
      <%= form.label :message, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :message, 
          rows: 8,
          placeholder: "Please provide as much detail as possible...",
          class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg p-3",
          maxlength: 5000 %>
      <p class="mt-1 text-sm text-gray-500">Maximum 5000 characters</p>
    </div>

    <div class="flex items-center justify-between pt-4">
      <%= link_to "Cancel", dashboard_path, class: "text-gray-600 hover:text-gray-900" %>
      <%= form.submit "Send Feedback", 
          class: "px-6 py-3 bg-gradient-to-r from-primary-600 to-secondary-700 text-white font-medium rounded-lg hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 cursor-pointer transition-all" %>
    </div>
  <% end %>
    </div>
  </div>
</div>